{
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "dist/",
    "moduleResolution": "node",
    "rootDir": "src/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"]
}
